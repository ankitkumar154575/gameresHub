package com.example.reconreport.controller;

import com.example.reconreport.model.EsopIgnoredRecon;
import com.example.reconreport.model.EsopIwiRecon;
import com.example.reconreport.model.EsopRejectedReferral;
import com.example.reconreport.repository.EsopIgnoredReconRepository;
import com.example.reconreport.repository.EsopIwiReconRepository;
import com.example.reconreport.repository.EsopRejectedReferralRepository;
import com.example.reconreport.service.EmailService;
import com.example.reconreport.service.ExcelService;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.web.bind.annotation.*;

import javax.mail.MessagingException;
import java.io.IOException;
import java.time.LocalDate;
import java.util.List;

@RestController
@RequestMapping("/api/report")
public class ReportController {

    @Autowired
    private ExcelService excelService;

    @Autowired
    private EmailService emailService;

    @Autowired
    private EsopRejectedReferralRepository rejectedReferralRepo;

    @Autowired
    private EsopIgnoredReconRepository ignoredReconRepo;

    @Autowired
    private EsopIwiReconRepository iwiReconRepo;

    @Value("${excel.file.path}")
    private String excelFilePath;

    @PostMapping("/generate-and-send")
    public String generateAndSendReport() {
        try {
            // ✅ Fetch data from DB
            List<EsopRejectedReferral> rejectedReferrals = rejectedReferralRepo.findAll();
            List<EsopIgnoredRecon> ignoredRecons = ignoredReconRepo.findAll();
            List<EsopIwiRecon> iwiRecons = iwiReconRepo.findAll();

            // ✅ Generate Excel file
            String filePath = excelService.generateExcelFile(rejectedReferrals, ignoredRecons, iwiRecons);

            // ✅ Send Email with Attachment
            String subject = "eSOP to CMT Reconciliation Report";
            String body = "Please see the attached Reconciliation Report that was processed on " + LocalDate.now() + ".";
            emailService.sendEmailWithAttachment("ankitkumar154575@gmail.com", subject, body, filePath);

            return "Report generated and email sent successfully!";
        } catch (IOException | MessagingException e) {
            return "Error occurred: " + e.getMessage();
        }
    }
}
